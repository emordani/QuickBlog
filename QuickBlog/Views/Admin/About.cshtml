@model QuickBlog.CORE.ViewModels.AdminViewModels.AboutViewModel
@{
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <form asp-controller="Admin" asp-action="UpdateAbout" method="post" enctype="multipart/form-data">
                    <div class="card-header">
                        <i class="fas fa-pen-fancy mr-1"></i>
                        Update Your About Me info
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="HeaderImage"></label>
                            <div class="custom-file">
                                <input asp-for="HeaderImage" class="custom-file-input" accept="image/*" />
                                <label class="custom-file-label">Choose file</label>
                            </div>
                            <span asp-validation-for="HeaderImage" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SubHeader"></label>
                            <input asp-for="SubHeader" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Content"></label>
                            <textarea asp-for="Content" class="form-control textarea" rows="8"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <a asp-controller="Home" asp-action="Author" asp-route-authorId="@Model.Author.Id" class="btn btn-secondary float-right">View</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/29.2.0/classic/ckeditor.js"></script>
@section Scripts {
    <script>
        ClassicEditor
            .create(document.querySelector('.textarea'))
            .catch(error => {
                console.error(error);
            });
        $(".custom-control-input").on("change",
            function () {
                var fileName = $(this).val.split("\\").pop();
                $(this).siblings(".custom-control-input").addClass("selected").html(fileName);
            });
    </script>
}